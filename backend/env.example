# RAN Insight Pro Backend Configuration
# Copy this file to .env and update the values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# SQLite (Development) - Default
DATABASE_URL=sqlite:///./ran_insight.db

# PostgreSQL (Production) - Uncomment and configure for production
# DATABASE_URL=postgresql://username:password@localhost:5432/ran_insight
# DATABASE_URL=postgresql://username:password@hostname:5432/ran_insight

# =============================================================================
# OPENAI CONFIGURATION
# =============================================================================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Model to use for AI analysis (gpt-4o-mini is recommended for cost efficiency)
OPENAI_MODEL=gpt-4o-mini

# Maximum tokens for AI responses
OPENAI_MAX_TOKENS=1000

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Generate a secure secret key for JWT tokens
# You can generate one with: python -c "import secrets; print(secrets.token_urlsafe(32))"
# IMPORTANT: Change this to a secure random string in production!
SECRET_KEY=your-secret-key-here-change-in-production-must-be-32-chars-minimum

# JWT token expiration time in minutes
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
# Host to bind the server to
HOST=0.0.0.0

# Port to run the server on
PORT=8000

# Enable auto-reload for development (true/false)
RELOAD=true

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
# Allowed origins for CORS (comma-separated)
# Add your frontend URLs here
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,https://yourdomain.com

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
# Maximum file size in bytes (default: 10MB)
MAX_FILE_SIZE=10485760

# Allowed file extensions (comma-separated)
ALLOWED_EXTENSIONS=csv

# Upload directory (relative to backend folder)
UPLOAD_DIR=uploads

# =============================================================================
# MONITORING AND LOGGING
# =============================================================================
# Enable structured logging (true/false)
STRUCTURED_LOGGING=true

# Log file path (optional, if not set logs to console)
LOG_FILE=logs/ran_insight.log

# Enable health check logging (true/false)
HEALTH_CHECK_LOGGING=true

# =============================================================================
# AI ANALYSIS CONFIGURATION
# =============================================================================
# Confidence threshold for AI analysis (0.0 to 1.0)
AI_CONFIDENCE_THRESHOLD=0.7

# Enable AI analysis (true/false) - set to false if no OpenAI key
AI_ANALYSIS_ENABLED=true

# =============================================================================
# ANOMALY DETECTION CONFIGURATION
# =============================================================================
# RTWP anomaly threshold (standard deviations)
RTWP_ANOMALY_THRESHOLD=2.5

# SINR anomaly threshold (standard deviations)
SINR_ANOMALY_THRESHOLD=2.0

# PRB anomaly threshold (standard deviations)
PRB_ANOMALY_THRESHOLD=2.0

# =============================================================================
# REPORT GENERATION CONFIGURATION
# =============================================================================
# Enable PDF report generation (true/false)
PDF_REPORTS_ENABLED=true

# Report output directory
REPORT_OUTPUT_DIR=reports

# =============================================================================
# FIRMWARE MANAGEMENT
# =============================================================================
# Enable firmware version tracking (true/false)
FIRMWARE_TRACKING_ENABLED=true

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Enable debug mode (true/false) - only for development
DEBUG=false

# Enable API documentation (true/false)
ENABLE_DOCS=true

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================
# Trusted hosts for production
TRUSTED_HOSTS=localhost,127.0.0.1,*.vercel.app,yourdomain.com

# Enable HTTPS redirect (true/false)
FORCE_HTTPS=false

# =============================================================================
# BACKUP AND MAINTENANCE
# =============================================================================
# Enable automatic database backups (true/false)
AUTO_BACKUP=false

# Backup retention days
BACKUP_RETENTION_DAYS=30

# =============================================================================
# RATE LIMITING
# =============================================================================
# Enable rate limiting (true/false)
RATE_LIMITING_ENABLED=true

# Requests per minute per IP
RATE_LIMIT_PER_MINUTE=60

# =============================================================================
# EMAIL NOTIFICATIONS (Optional)
# =============================================================================
# SMTP configuration for email notifications
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your_email@gmail.com
# SMTP_PASSWORD=your_app_password
# SMTP_USE_TLS=true

# =============================================================================
# EXTERNAL INTEGRATIONS (Optional)
# =============================================================================
# Webhook URL for notifications
# WEBHOOK_URL=https://your-webhook-url.com/notify

# External API keys (if needed)
# EXTERNAL_API_KEY=your_external_api_key